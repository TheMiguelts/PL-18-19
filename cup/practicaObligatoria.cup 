EXP ::= EXP:exp OP:op EXP:exp2 {:
		Expresion e=new Expresion();
		Simbolo s=new Simbolo();
		s.esOperacionAritmetica=true;
		s.operacion=op.operacion;
		e.simbolos.addAll(exp.simbolos);
		e.simbolos.add(s);
		e.simbolos.addAll(exp2.simbolos);
		RESULT=e;
:}
    | FACTOR:factor {:
