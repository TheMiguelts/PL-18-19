PRG::=programa identificador puntoComa BLQ:blq punto {:
		Programa p=new Programa();
		p.tipoPrograma=prog;
		p.nombre=identificador;
		p.bloque=blq;
		Programa.generarFichero(p.imprimir().toString());
		RESULT=p;
:}
    | unit identificador puntoComa DCLLIST:dcllist punto {:
		Programa p=new Programa();
		p.tipoPrograma=unit;
