		expresion.simbolos.addAll(exp.simbolos);
		expresion.simbolos.add(s);
		expresion.simbolos.addAll(explist.simbolos);
		RESULT=expresion;
:};

PROC_CALL ::= identificador:id SUBPPARAMLIST:subparamlist {:
