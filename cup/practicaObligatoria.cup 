		RESULT=sentencia;
:};

EXPCOND ::= EXPCOND:expcond OPLOG:oplog EXPCOND:expcond2{:
		expcond.condicion.add(oplog);
		expcond.condicion.addAll(expcond2.condicion);
		RESULT=expcond;
:}
    | FACTORCOND:factorcond{:
		RESULT=factorcond;
:}
