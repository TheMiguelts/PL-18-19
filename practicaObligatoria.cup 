SENT ::= ASIG:asig puntoComa {:
		Simbolo s=new Simbolo();
		s.puntoYComa=";";
		s.esPuntoComa=true;
		Sentencia sentencia=new Sentencia();
		sentencia.simbolos.add(s);
		sentencia.simbolos.addAll(asig);
		RESULT=sentencia;
:}
    | PROC_CALL:proCall puntoComa {:
		Simbolo s=new Simbolo();
		s.puntoYComa=";";
		s.esPuntoComa=true;
		Sentencia sentencia=new Sentencia();
		sentencia.simbolos.add(s);
		sentencia.simbolos.addAll(proCall);
		RESULT=sentencia;
