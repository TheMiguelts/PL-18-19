			sentecia.simbolos.add(tbas);
			sentecia.simbolos.addAll(varlist.simbolos);
			RESULT = sentecia;
	:}
    | DEFVARLIST:defvarlist puntoComa VARLIST:varlist dosPuntos TBAS:tbas {:
			Sentencia sentencia = new Sentencia();
